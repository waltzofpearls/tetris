doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/vnd.microsoft.icon')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header(role='banner')
      nav.navbar.navbar-default.navbar-fixed-top.tetris-nav(role='navigation')
        div.container
          div.navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.tetris-navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            div.small-logo-container
              a.small-logo(href='/'): img(src='/images/logo-small.png')
          div.collapse.navbar-collapse.tetris-navbar-collapse
            ul.nav.navbar-nav
              li: a(href='/') 0: 'Home'
              li: a(href='/projects') 1: 'Projects'
              li: a(href='/resume') 2: 'Resume'
            ul.nav.navbar-nav.navbar-right
              li: a(href='https://www.facebook.com/topbass', rel='external') 3: 'Facebook'
              li: a(href='https://google.com/+RollieMa', rel='external') 4: 'Google+'
              li: a(href='https://twitter.com/Topbass', rel='external') 5: 'Twitter'
              li: a(href='https://ca.linkedin.com/pub/rollie-ma/34/59b/460/', rel='external') 6: 'LinkedIn'
      div.container.big-logo-row
        div.row
          div.col-xs-12.big-logo-container
            h1.big-logo
              a(href='/')
                img(src='/images/logo-big.png')
                span {'Tetris': 'Rollie'}
    div.container
      block content
    footer
      div
    case process.env.NODE_ENV
      when 'testing'
      when 'production'
        script(data-main='javascripts/main.min', src="javascripts/libs/require-2.1.15.min.js")
      when 'development'
      default
        script(data-main='javascripts/main', src="javascripts/libs/require-2.1.15.js")
