doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/vnd.microsoft.icon')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header(class=['navbar', 'navbar-static-top', 'tetris-nav'] role='banner')
      div.container
        div.navbar-header
          button(class=['navbar-toggle', 'collapsed'] type='button' data-toggle='collapse' data-target='.tetris-navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='/' class='navbar-brand') Tetries
          nav(class=['collapse', 'navbar-collapse', 'tetris-navbar-collapse'])
            ul(class=['nav', 'navbar-nav'])
              li: a(href='../getting-started/') Getting started
              li: a(href='../css/') CSS
              li: a(href='../components/') Components
              li: a(href='../customize/') JavaScript
              li: a(href='../customize/') Customize
            ul(class=['nav', 'navbar-nav', 'navbar-right'])
              li: a(href='http://expo.getbootstrap.com') Expo
              li: a(href='http://blog.getbootstrap.com') Blog
    div.container
      block content
    footer
      div
    case process.env.NODE_ENV
      when 'testing'
      when 'production'
        script(data-main='javascripts/main.min', src="javascripts/libs/require-2.1.15.min.js")
      when 'development'
      default
        script(data-main='javascripts/main', src="javascripts/libs/require-2.1.15.js")
