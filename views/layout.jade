doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/vnd.microsoft.icon')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header(role='banner')
      nav(class='navbar navbar-default navbar-fixed-top tetris-nav', role='navigation')
        div.container
          div.navbar-header
            button(class='navbar-toggle collapsed', type='button', data-toggle='collapse', data-target='.tetris-navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            div.small-logo-container
              a(class='small-logo', href='/'): img(src='/images/logo-small.png')
          div(class='collapse navbar-collapse tetris-navbar-collapse')
            ul(class='nav navbar-nav')
              li: a(href='/about') 0: 'Home'
              li: a(href='/projects') 1: 'Projects'
              li: a(href='/resume') 2: 'Resume'
            ul(class='nav navbar-nav navbar-right')
              li: //- a(href='/resume') 2: 'Resume'
      div(class='container big-logo-row')
        div.row
          div(class='col-xs-12 big-logo-container')
            h1.big-logo
              a(href='/'): img(src='/images/logo-big.png')
              span {'Tetris': 'Rollie'}
    div.container
      block content
    footer
      div
    case process.env.NODE_ENV
      when 'testing'
      when 'production'
        script(data-main='javascripts/main.min', src="javascripts/libs/require-2.1.15.min.js")
      when 'development'
      default
        script(data-main='javascripts/main', src="javascripts/libs/require-2.1.15.js")
